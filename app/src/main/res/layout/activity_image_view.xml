<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fincoapps.servizone.ImageView">

    <LinearLayout
        android:id="@+id/padup"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="0.3"
        android:layout_height="0dp">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/paddown"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">


        <android.support.v7.widget.CardView
            android:id="@+id/cardup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="2"
            app:cardBackgroundColor="@color/grayboder"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/imagefullview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="@drawable/rounddp"
                android:scaleType="fitCenter" />

        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/padmid"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="0.3"
        android:layout_height="0dp">

    </LinearLayout>

</LinearLayout>
