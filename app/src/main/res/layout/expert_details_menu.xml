<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".experts.ExpertDetailsActivity"
    android:background="@drawable/roundborder">

    <LinearLayout
        android:id="@+id/popuplayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtCallExpert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="90dp"
            android:layout_marginLeft="20dp"
            android:textColor="#676767"
            android:text="Call expert"
            android:visibility="visible"
            android:onClick="callExpert"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <!--<TextView-->
            <!--android:id="@+id/txtSendSMS"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="30dp"-->
            <!--android:layout_marginRight="90dp"-->
            <!--android:layout_marginLeft="20dp"-->
            <!--android:textColor="#676767"-->
            <!--android:text="Send expert an SMS"-->
            <!--android:onClick="sendSMS()"-->
            <!--android:textAppearance="?android:attr/textAppearanceMedium" />-->


        <TextView
            android:id="@+id/txtViewReviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="90dp"
            android:layout_marginLeft="20dp"
            android:textColor="#676767"
            android:text="View Reviews"
            android:visibility="visible"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/txtWriteReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#676767"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="22dp"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="20dp"
            android:text="Write review"
            android:onClick="writeReview"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/txtReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:layout_marginTop="30dp"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="30dp"
            android:onClick="reportExpert"
            android:text="Report expert"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>
</LinearLayout>